<style>
    .content {
        padding: 30px 30px;
    }

    .secadmindas {
        width: 100%;
        
    }

    .secadmindas p:first-child {
        font-size: 24px;
        padding: 20px 0 0 0;
    }

    .dashboard-stats {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        /* ทำให้เรียงเป็นแถวเมื่อมีพื้นที่พอ */
    }

    .stats-card,
    .popular-activities,
    .feature-usage {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 500px;
        /* กำหนดความกว้างให้เท่ากัน */
        display: block;
    }

    .stats-card .icondashadmin {
        display: flex;
        align-items: center;
    }

    .stats-card .icondashadmin p {
        margin: 0;
    }

    .chart-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
        text-align: center;
    }

    canvas {
        max-width: 500px;
        max-height: 350px;
    }

    .server-info {
        text-align: center;
        margin-top: 20px;
    }

    .server-metrics {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .metric {
        background: #fff;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        min-width: 150px;
    }

    .stats-card #icondash {
        text-align: center;
        font-size: 25px;
        padding: 16px;
        border-radius: 100%;
        margin-right: 20px;
    }

    .stats-card .totalusr {
        background-color: #ffdcc0;
    }

    .stats-card .onlineuser {
        background-color: #c0ffc3;
    }

    .stats-card .statstext-card p {
        font-size: 18px;
        padding: 0;
    }

    .stats-card .statstext-card p:first-child {
        font-size: 16px;
        color: #9E9E9E;
        margin-bottom: 5px;
    }

    .popular-activities,
    .feature-usage {
        margin-top: 20px;
    }

    .popular-activities h3,
    .feature-usage h3 {
        font-size: 24px;
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .activity-table,
    .feature-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .activity-table th,
    .feature-table th {
        background-color: var(--primary-color);
        color: white;
        padding: 10px;
        text-align: left;
    }

    .activity-table td,
    .feature-table td {
        padding: 10px;
        border-bottom: 1px solid var(--lightline);
    }

    .activity-table tr:nth-child(even),
    .feature-table tr:nth-child(even) {
        background-color: var(--primary-color-light);
    }

    .activity-table tr:hover,
    .feature-table tr:hover {
        background-color: #f1f1f1;
        transition: 0.3s;
    }

    .statas-sever {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 20px;
        margin-bottom: 20px;
        width: calc(500px * 2 + 20px);

    }

    .chart-container {
        display: flex;
        flex-wrap: nowrap;
        gap: 20px;
        flex: 1;
    }

    .chart-box {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        text-align: center;
    }

    .server-metrics {
        display: flex;
        flex-direction: column;
        gap: 20px;
        flex: 1;
    }

    .metric {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
</style>

<div class="main-container">
    <div class="content">
        <div class="secadmindas">
            <p>Dashboard</p>
            <div class="dashboard-stats">
                <div class="stats-card">
                    <div class="icondashadmin">
                        <span>
                            <i id="icondash" class="totalusr fa-solid fa-users"
                                style="color: #ff6f00; font-size: 20px;"></i>
                        </span>
                        <div class="statstext-card">
                            <p>จำนวนผู้ใช้ทั้งหมด</p>
                            <p>
                                <%= totalUsers %> คน
                            </p>
                        </div>
                    </div>

                </div>
                <div class="stats-card">
                    <div class="icondashadmin">
                        <span>
                            <i id="icondash" class="onlineuser fa-solid fa-globe"
                                style="color: #0E9F6E; font-size: 20px;"></i>
                        </span>
                        <div class="statstext-card">
                            <p>จำนวนผู้ใช้ที่ออนไลน์</p>
                            <p>
                                <%= onlineUsers %> คน
                            </p>
                        </div>
                    </div>
                </div>
                <div class="popular-activities">
                    <h3>กิจกรรมยอดนิยมของผู้ใช้</h3>
                    <table class="activity-table">
                        <tr>
                            <th>กิจกรรม</th>
                            <th>เปอร์เซ็นต์</th>
                        </tr>
                        <% popularActivities.forEach(activity=> { %>
                            <tr>
                                <td>
                                    <%= activity.name %>
                                </td>
                                <td>
                                    <%= activity.percentage %> %
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </div>

                <div class="feature-usage">
                    <h3>อัตราการใช้งานฟีเจอร์</h3>
                    <table class="feature-table">
                        <tr>
                            <th>ฟีเจอร์</th>
                            <th>จำนวนครั้งที่ใช้</th>
                        </tr>
                        <% featureUsageStats.forEach(feature=> { %>
                            <tr>
                                <td>
                                    <%= feature.featureName %>
                                </td>
                                <td>
                                    <%= feature.count %>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </div>
                <div class="statas-sever">
                    <!-- กราฟ CPU และ Memory อยู่ซ้าย -->
                    <div class="chart-container">
                        <div class="chart-box">
                            <canvas id="cpuChart" width="200" height="200"></canvas>
                            <p><strong>CPU Usage</strong></p>
                        </div>
                        <div class="chart-box">
                            <canvas id="memoryChart" width="200" height="200"></canvas>
                            <p><strong>Memory Usage</strong></p>
                        </div>
                    </div>
    
                    <!-- Server Uptime และ Response Time อยู่ขวา -->
                    <div class="server-metrics">
                        <div class="metric">
                            <h3>Server Uptime</h3>
                            <p id="uptime">Calculating...</p>
                        </div>
                        <div class="metric">
                            <h3>Response Time</h3>
                            <p id="responseTime">Calculating...</p>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

<script nonce="<%= nonce %>">
    const popularActivities = JSON.parse('<%- JSON.stringify(popularActivities).replace(/<\/script/g, ' <\\/script') %> ');
    const featureUsageStats = JSON.parse('<%- JSON.stringify(featureUsageStats).replace(/<\/script/g, ' <\\/script') %> ');
</script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/public/script/dashboardAdminScipt/dashboard.js"></script>